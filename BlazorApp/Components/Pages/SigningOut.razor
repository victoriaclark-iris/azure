@page "/signing-out"
@inject IJSRuntime JSRuntime

<PageTitle>Signing Out</PageTitle>

<h1>Signing out...</h1>
<p>Please wait while we complete sign-out.</p>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        // For production Easy Auth only - local OIDC now redirects directly from /account/logout
        await JSRuntime.InvokeVoidAsync("easyAuth.signOutAndRedirect", "/signed-out");
    }
}
